{% extends 'layouts/base.twig' %}
{% block content %}
    {% include 'partials/post-card.twig' %}
    {% include 'partials/prev-next.twig' %}
    <div id="comments" class="comments-area">
      {% if post.comments.count == 1 %}
        <h2 class="comments-title mt-5">Thought on
          {{post.title}}
        </h2>
      {% elseif post.comments.count >1 %}
        <h2 class="comments-title mt-5">Thoughts on
          {{post.title}}
        </h2>
      {% endif %}
      <ul class="list-unstyled comment-list">
        {% if post.comments %}
          {% for cmt in post.comments %}
            {% include "partials/comment.twig" with {
              comment : cmt
            } %}
          {% endfor %}
        {% endif %}
      </ul>
      {% if post.comment_status == "closed" %}
        <p>
          comments for this post are closed
        </p>
      {% else %}
        {% include "partials/comment-form.twig" %}
      {% endif %}
    </div>
{% endblock %}
