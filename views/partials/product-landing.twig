<div id="pland">
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
      <div class="col-md-5 p-lg-5 mx-auto my-5">
          <h1 class="display-4 font-weight-normal">{{post.landing_title}}</h1>
          <p class="lead font-weight-normal">{{post.landing_content}}</p>
          <a class="btn btn-outline-secondary" href="{{ function('get_permalink', post.buttonurl) }}">{{post.button_text}}</a>
      </div>
      <div class="product-device box-shadow d-none d-md-block"><img src = "{{ post.thumbnail.src('full') | default( Image(post.top_right_image).src('full') ) }}"></div>
      <div class="product-device product-device-2 box-shadow d-none d-md-block"><img src = "{{ post.thumbnail.src('full') | default( Image(post.top_left_image).src('full') ) }}"></div>
</div>


<div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
  <div class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
      <div class="my-3 py-3">
        <h2 class="display-5">{{post.headline2}}</h2>
        <p class="lead">{{post.subheadline2}}</p>
      </div>
      <div class="bg-light box-shadow mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;"><img class="img-fluid" src = "{{ post.thumbnail.src('full') | default( Image(post.sub_left_image).src('full') ) }}"></div>
  </div>
  <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
      <div class="my-3 p-3">
        <h2 class="display-5">{{post.headline3}}</h2>
        <p class="lead">{{post.subheadline3}}</p>
      </div>
    <div class="bg-dark box-shadow mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;"><img class="img-fluid" src = "{{ post.thumbnail.src('full') | default( Image(post.sub_right_image).src('full') ) }}"></div>
  </div>
</div>
</div>
